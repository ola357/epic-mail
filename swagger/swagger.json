        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of message to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object"
            }
          },
          "404": {
            "description": "Message with given id not found"
